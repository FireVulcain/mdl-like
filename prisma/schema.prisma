generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String?       @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  media         UserMedia[]
  activityLogs  ActivityLog[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model UserMedia {
  id            String   @id @default(cuid())
  userId        String
  externalId    String
  source        String
  mediaType     String
  status        String
  progress      Int
  totalEp       Int?
  score         Float?
  title         String?
  poster        String?
  year          Int?
  originCountry String?
  updatedAt     DateTime @updatedAt
  notes         String?
  season        Int      @default(1)
  tmdbRating    Float?
  genres        String?
  backdrop      String?
  mdlRating     Float?
  airingStatus  String?
  lastWatchedAt DateTime?
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SyncLog {
  id       String   @id @default("daily-sync")
  lastSync DateTime @default(now())
  results  Json?
}

model ActivityLog {
  id          String   @id @default(cuid())
  userId      String
  userMediaId String?
  externalId  String
  source      String
  mediaType   String
  title       String
  poster      String?
  action      String
  payload     Json?
  createdAt   DateTime @default(now())
  isBackfill  Boolean  @default(false)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@index([userMediaId])
}

model CachedMdlData {
  id             String   @id @default(cuid())
  tmdbExternalId String   @unique
  mdlSlug        String
  mdlRating      Float?
  mdlRanking     Int?
  mdlPopularity  Int?
  tags           Json?
  castJson       Json?
  cachedAt       DateTime @default(now())
}

model CachedKuryanaPerson {
  slug      String   @id
  dataJson  Json
  cachedAt  DateTime @default(now())
}

model CachedEpisode {
  id            String   @id @default(cuid())
  mediaId       String
  airDate       String
  episodeNumber Int
  seasonNumber  Int
  episodeName   String?
  createdAt     DateTime @default(now())

  @@index([mediaId])
}
